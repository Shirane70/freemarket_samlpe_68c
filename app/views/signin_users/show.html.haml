.logins
  .logins__header
    =link_to image_tag('logo.png', class: 'login__header__image'), "#"
    
  .logins__row
    .logins__row__container

      .logins__row__container__header
        %h2 連携済みアカウントでログイン

      .logins__row__container__icons
        .logins__row__container__icons__icon
          =link_to ""
        .logins__row__container__icons__icon
          = link_to "" do
            %i{ class: "fab fa-facebook-square fa-4x "}
        .logins__row__container__icons__icon
          = link_to "" do
            %i{ class: "fab fa-google fa-4x"}
        .logins__row__container__icons__icon
          =link_to ""
    
      .logins__row__container__border
        .logins__row__container__border__beforeborder
        %p もしくは
        .logins__row__container__border__afterborder
    
      .logins__row__container__middle
        %h2 メールアドレスでログイン

      .logins__row__container__form
        = form_with(url: "#", local: true, method: :post) do |f|
          .form-field
            .form-field__input
              = f.email_field :email, autofocus: true, placeholder: "メールアドレス"
            .form-field__input
              = f.password_field :password, autofocus: true, placeholder: "パスワード"
            .form-field__button
              = f.submit "ログイン", class: 'btn'
        
      .logins__row__container__restart
        = link_to "#" do
          パスワード、ログイン方法を忘れた方はこちらから

  .logins__row__br

  .logins__row__registation
    .logins__row__registation__text
      %h2 フリマに未登録の方は
      = link_to "" do
        %button 
          登録する
  
  .logins__row__footer
    %p © Furima, Inc. All Rights Reserved.     



