%body.address-container
  %header.address-container--header
    =link_to image_tag('logo.png', class: 'address--header--image'), "#"
  %main.address-container--main
    %section.address-container--main--registration
      %h2.address-container--main--registration--display お客さまの本人情報をご登録ください
      %form.address-container--main--registration--form{action: "https://www.mercari.com/jp/signup/sms_confirmation/sms/", method: "POST", novalidate: "novalidate"}
        %input{name: "after_save_callback", type: "hidden", value: ""}/
        .address-container--main--registration--form--content
          .address-container--main--registration--form--content--group
            %label{for: "phone_number"} 携帯電話の番号
            %span.form-require 必須
            %input.address-container--main--registration--form--content--group--input{name: "phone_number", placeholder: "携帯電話の番号を入力", type: "tel", value: ""}/

          %form.address-container--main--registration--form--content--place{action: "https://www.mercari.com/jp/mypage/identification/save/", method: "POST", novalidate: ""}
            %div
              %p.text-right
                %a{href: "#/", target: "_blank"}
                  本人確認書類のアップロードについて
                  %i.icon-arrow-right
            .form-group
              %label{for: "postal_code"} 郵便番号
              %span.form-require 必須
              %input.input-default{name: "postal_code", placeholder: "例）1234567", type: "text", value: ""}/
            .form-group
              %label{for: "prefectures"} 都道府県
              %span.form-require 必須
              .select-wrap
                %i.icon-arrow-bottom
                %select.select-default{name: "prefectures"}
                  %option --
                  %option 北海道
                  %option 青森県
                  %option 岩手県
                  %option 宮城県
                  %option 秋田県
                  %option 山形県
                  %option 福島県
                  %option 東京都
                  %option 神奈川県
                  %option 埼玉県
                  %option 千葉県
                  %option 茨城県
                  %option 栃木県
                  %option 群馬県
                  %option 山梨県
                  %option 新潟県
                  %option 長野県
                  %option 富山県
                  %option 石川県
                  %option 福井県
                  %option 愛知県
                  %option 岐阜県
                  %option 静岡県
                  %option 三重県
                  %option 大阪府
                  %option 兵庫県
                  %option 京都府
                  %option 滋賀県
                  %option 奈良県
                  %option 和歌山県
                  %option 鳥取県
                  %option 島根県
                  %option 岡山県
                  %option 広島県
                  %option 山口県
                  %option 徳島県
                  %option 香川県
                  %option 愛媛県
                  %option 高知県
                  %option 福岡県
                  %option 佐賀県
                  %option 長崎県
                  %option 熊本県
                  %option 大分県
                  %option 宮崎県
                  %option 鹿児島県
                  %option 沖縄県
            .form-group
              %label{for: "municipalities"} 市区町村
              %span.form-require 必須
              %input.input-default{name: "municipalities", placeholder: "例) 横浜市緑区", type: "text", value: ""}/
            .form-group
              %label{for: "address_label"} 番地
              %span.form-require 必須
              %input.input-default{name: "address", placeholder: "例) 青山1−1−1", type: "text", value: ""}/
            .form-group
              %label{for: "building_label"} 建物名
              %span.form-arbitrary 任意
              %input.input-default{name: "building", placeholder: "例) 柳ビル103", type: "text", value: ""}/
            %button.btn-default.btn-red{type: "submit"} 登録する

  %footer.mains__footer
    %ul.mains__footer__content
      %li
        = link_to "#" do
          会社概要（運営会社）
      %li
        = link_to "#" do
          プライバシーポリシー
      %li
        = link_to "#" do
          FURIMA利用規約
    .mains__footer__logo
      = link_to image_tag('logo.png', class: 'logo__image'), "#"
    %p.mains__footer__c-mark
      © FURIMA,inc.