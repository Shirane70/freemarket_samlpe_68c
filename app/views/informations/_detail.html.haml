      .topContent
        .itemBox      
          %h2.itemBox__name 
            = @item.name
          .itemBox__body
            %ul
              %li
                = image_tag(@item.images.first.image.url)
                -# = image_tag 'https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/7/a001.png'
                %ul
                  %li
                    -# = image_tag images.image2.url
