      %p product1

.main
  .showMain
    .contentLeftqq
    .contentRight
      .topContent
        .itemBox
          %h2.itemBox__name product1
          .itemBox__body
            %ul
              %li
                = image_tag 'https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/7/a001.png'
          .itemBox__price
            %span
              ¥10000
            .itemBox__price-detail
              %span
                (税込)
              %span
                送料込み
          .itemDetail product1
          .table
            %table
              %tbody
                %tr
                  %th 出品者
                  %td hoge
                %tr
                  %th カテゴリー
                  %td
                    =link_to "レディース"
                    %br/
                    =link_to "トップス" 
                    %br/
                    =link_to "Tシャツ/カットソー(半袖/袖なし)"
                %tr
                  %th ブランド
                  %td
                %tr
                  %th 商品の状態
                  %td 新品/未使用
                %tr
                  %th 配送料の負担
                  %td 送料込み（出品者負担）
                %tr
                  %th 発送元の地域
                  %td
                    =link_to "青森県"
                %tr
                  %th 発送日の目安
                  %td 1-2日で発送
          .page_manage
            .seller_btn
            - if user_signed_in? && current_seller.id == @item.seller_id
              %a.item-edit-btn{href: "#"}
                編集画面に進む
              %a.item-delete-btn{href: "#"}
                削除画面に進む
            .buyer_btn
            - if user_signed_in? && current_user.id == @post.user_id
              %a.item-buy-btn{href: "#"}
                購入画面に進む

      %ul.links
        %li
          =link_to "#" do
            %i.fa.fa-angle-left
            %span
            前の商品
        %li
          =link_to "#" do
            %span
            後ろの商品
            %i.fa.fa-angle-right
      .relatedItems
        =link_to "レディースをもっと見る"
        .productLists