          .itemBox__price
            %span
              = @item.price
            .itemBox__price-detail
              %span
                (税込)
              %span
                送料込み
          .itemDetail 
            = @item.name
          .table
            %table
              %tbody
                %tr
                  %th 出品者
                  %td 
                    =link_to @item.seller.nickname
                %tr
                  %th カテゴリー
                  %td
                    =link_to "#{@item.category_id}"
                    %br/
                    
                    %br/
                    
                %tr
                  %th ブランド
                  %td
                %tr
                  %th 商品の状態
                  %td 
                    =@item.state
                    
                %tr
                  %th 配送料の負担
                  %td 
                    =@item.postage
                    
                %tr
                  %th 発送元の地域
                  %td
                    =@item.region
                    
                %tr
                  %th 発送日の目安
                  %td 
                    =@item.shipping_days
                    
          .page_manage
            .seller_btn
              - if user_signed_in? && current_user.id == @item.seller_id   
                %a.item-edit-btn{href: "#"}
                  編集画面に進む
                %a.item-delete-btn{href: "#"}
                  削除する
            .buyer_btn
              %a.item-buy-btn{href: "#"}
                購入画面に進む

      %ul.links
        %li
          =link_to "#" do
            %i.fa.fa-angle-left
            %span
            前の商品
        %li
          =link_to "#" do
            %span
            後ろの商品
            %i.fa.fa-angle-right
      .relatedItems
        =link_to "同じカテゴリーの商品をもっと見る"
        .productLists